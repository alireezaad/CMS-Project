@model IEnumerable<CMSArticle.Views.ViewModel.CommentViewModel>
@{
    ViewBag.Title = "لیست تمام کامنت ها ";
    int counter = 1;
}



<table class="table">
    <tr>
        <th>
            ردیف
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @counter
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.Raw(item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterDate)
        </td>
        <td>
            @if (item.IsActive)
            {
                <span style="color:green">تایید شده</span>
            }
            else
            {
                <span style="color:red">در انتظار تایید</span>

            }
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id = item.CommentId }, new { @class = "btn btn-warning" }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.CommentId }) |*@
            @Html.ActionLink("حذف", "Delete", new { id = item.CommentId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    counter++;
}

</table>
<br />
